  "paths": {
    "/users/register": {
      "post": {
        "tags": ["Auth"],
        "summary": "User registration",
        "parametres": [],
        "requestBody": {
          "required": true,
          "description": "Body description:\n\n 'username'- string, user name or nick\n\n'email' - string, valid user`s email\n\n'password' - string, якісь символи і довжина",
          "content": {
            "application/json": {
              "schema": {}
            }
